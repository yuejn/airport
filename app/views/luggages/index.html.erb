<p id="notice"><%= notice %></p>

<h1>Listing Luggages</h1>

<table>
  <thead>
    <tr>
      <th>Ticket no</th>
      <th>Weight</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @luggages.each do |luggage| %>
      <tr>
        <td><%= luggage.ticket_no %></td>
        <td><%= luggage.weight %></td>
        <td><%= luggage.description %></td>
        <td><%= link_to 'Show', luggage %></td>
        <td><%= link_to 'Edit', edit_luggage_path(luggage) %></td>
        <td><%= link_to 'Destroy', luggage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

